{
  "name": "bjj-academy-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "BJJ Academy Management Application",
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:docker\" \"npm run dev:backend\" --names \"frontend,docker,backend\" --prefix-colors \"cyan,yellow,green\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:docker": "cd backend && docker compose down --volumes && docker compose up -d",
    "dev:backend": "cd backend && npm run dev",
    "format": "prettier --write \"**/*.{js,jsx,json,yml,yaml,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,yml,yaml,md}\"",
    "lint:frontend": "cd frontend && npm run lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^9.2.1",
    "cypress": "^15.7.1",
    "husky": "^9.0.0",
    "jsdom": "^27.3.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.3"
  }
}
