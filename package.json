{
  "name": "bjj-academy-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "BJJ Academy Management Application",
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:docker\" \"npm run dev:backend\" --names \"frontend,docker,backend\" --prefix-colors \"cyan,yellow,green\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:docker": "cd backend && docker compose down --volumes && docker compose up -d",
    "dev:backend": "cd backend && npm run dev",
    "format": "prettier --write \"**/*.{js,jsx,json,yml,yaml,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,yml,yaml,md}\"",
    "lint:frontend": "cd frontend && npm run lint",
    "test:frontend": "cd frontend && npm test"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0"
  }
}
